{
  "compilerOptions": {
    "incremental": true,
    "newLine": "lf",
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "module": "CommonJS",
    "lib": ["ES2019", "ES2020", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
