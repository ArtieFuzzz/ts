{
  "compilerOptions": {
    "target": "ES2019",
    "outDir": "./build",
    "incremental": true,
    "newLine": "lf",
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "module": "CommonJS",
    "lib": ["ES2019", "ES2020", "DOM"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["index.ts", "lib/*.ts", "package.json"],
  "exclude": ["node_modules"]
}
